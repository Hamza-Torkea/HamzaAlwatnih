@model alwatnia.Models.ProductCat
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Cpanel/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        @section addBtn {

            <h1>تعديل تصنيف : @Model.ArabicTitle</h1>

            <div class="breadcrumb">
                <a href="@Url.Action("Index", "ProductCat")" class="btn default"><i class="fa fa-eye"></i> عرض التصنيفات </a>
            </div>

        }
    </div>
</div>
<form action="@Url.Action("Edit", "ProductCat")" method="post" class="horizontal-form" id="Slider_form" enctype="multipart/form-data">
    <div class="row">
        @Html.Action(actionName: "TempMessage", controllerName: "Message", routeValues: new { area = "" })
        <div class="col-md-3">
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-arrow-left font-dark"></i>
                        <span class="caption-subject font-dark bold uppercase">خصائص التصنيف</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="form-group">
                        <label>شركة المنتج</label>
                        <select class="form-control" name="CompanyId">
                            <option>-- اختار شركة المنتج --</option>
                            @foreach (var item in (List<alwatnia.Models.Company>)ViewBag.company)
                            {
                                <option value="@item.Id" @(item.Id == Model.CompanyId ? "selected" : "")>@item.Title</option>

                            }
                        </select>
                    </div>

                    <hr />
                    <div class="form-group ">
                        <label>اختار صورة التصنيف</label>

                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                <img src="~/Recources/ProductCat/@Model.Photo" height="150px" width="100%" />
                            </div>
                            <div>
                                <span class="btn red btn-outline btn-file">
                                    <span class="fileinput-new"> اختار الصورة </span>
                                    <span class="fileinput-exists"> تغيير </span>
                                    <input type="file" name="file">
                                </span>
                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> حذف </a>
                            </div>
                        </div>
                        <div class="clearfix margin-top-10">
                            <span class="label label-success">ملاحظة!</span> حجم الصورة اقل من 5 MB.
                        </div>

                    </div>
                    <hr />
                    <button type="submit" class="btn blue"><i class="fa fa-save"></i> النشر</button>
                </div>

            </div>
        </div>
        <div class="col-md-9">
            <input type="hidden" value="@Model.Photo" name="Photo" />
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-arrow-left font-dark"></i>
                        <span class="caption-subject font-dark bold uppercase">تفاصيل التصنيف</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>عنوان التصنيف بالعربية</label>
                                <input type="text" class="form-control" name="ArabicTitle" placeholder="العنوان" value="@( Model !=null? Model.ArabicTitle:"")">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group ">
                                <label>تفاصيل المنتج</label>
                                <input type="text" class="form-control" name="EnglishTitle" placeholder="title" value="@( Model !=null? Model.EnglishTitle:"")">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>