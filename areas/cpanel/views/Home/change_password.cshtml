@model alwatnia.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Cpanel/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<div class="row">
    <div class="col-md-12">
        @section addBtn {
            <h1> تغيير كلمة المرور </h1>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit bordered">
            <div class="portlet-body">

                    <form class="form-horizontal" role="form" action="@this.Url.Action("change_password")" method="POST">
                        
                        @Html.Action(actionName: "TempMessage", controllerName: "Message", routeValues: new { area = "" })
                        
                        <div class="form-group">
                            <label> كلمة المرور القديمة</label>
                            <input type="password" class="form-control" name="OldPassword" placeholder="كلمة المرور القديمة" value="@( Model !=null? Model.OldPassword:"")">
                        </div>
                        
                        <div class="form-group">
                            <label> كلمة المرور الجديدة</label>
                            <input type="password" class="form-control" name="NewPassword" placeholder="كلمة المرور الجديدة" value="@( Model !=null? Model.NewPassword:"")">
                        </div>
                        
                        <div class="form-group">
                            <label> تأكيد كلمة المرور الجديدة</label>
                            <input type="password" class="form-control" name="ConfirmPassword" placeholder="تأكيد كلمة المرور الجديدة" value="@( Model !=null? Model.ConfirmPassword:"")">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn blue"><i class="fa fa-save"></i>  موافق</button>
                        </div>
                    </form>
            </div>

        </div>
    </div>
    
</div>
