            <ul class="dropdown-menu">
              @if (companyWithoutMain != null && companyWithoutMain.Any())
              {
                foreach (var item in companyWithoutMain)
                {
                  <li><a href="@Url.Action("Company", "Home", new { id=item.Id})">@(isEng ? item.ETitle : item.Title)</a></li>
