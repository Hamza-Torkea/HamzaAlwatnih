          <li>
            @{
              try
              {
                if (isEng)
                {
                  var curLang = "ar";
                  <a href="@Url.Action("ChangeCulture", "Home", new {lang = curLang})">عربي</a>
                }
                else
                {
                  var curLang = "en";
                  <a href="@Url.Action("ChangeCulture", "Home", new {lang = curLang})">English</a>
                }
              }
              catch (Exception ex)
              {
                // ignore
              }
            }

