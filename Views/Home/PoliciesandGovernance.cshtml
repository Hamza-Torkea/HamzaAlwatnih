@using alwatnia.Helper;
@model alwatnia.Models.Page
@using alwatnia.Views.Shared
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData.AddActiveMenu(Nav.About);
    ViewData.AddActivePage(Nav.MainStaff);
}
<style>
.section-aboutCompany img {
    display: block;
    margin: auto;
    width: 85%;
    height: 10%;
}.section-aboutCompany {
    padding: 0;
}</style>
<section class="">
    <div class="container">
        <div class="new-bar">
            <img class="img-responsive" src="~/assets/home/images/parcode.png" alt="" />
        </div>
        <ol style="display: none" class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Resource.Main</a></li>
            <li class="breadcrumb-item active">@Resource.PoliciesandGovernance</li>
        </ol>
        <h2  style="color: #1e3687" class="title-page">@Resource.PoliciesandGovernance</h2>
    </div>
</section><!--section-topBanar-->
<div class="section-contentInner">
  <div class="section-aboutCompany">
    <div class="container">
      <div class="row reorder-xs">
        <div class="col-sm-12">
          @Html.Raw(Model.details)
        </div>
      </div>
    </div>
  </div><!--section-aboutCompany-->
</div>