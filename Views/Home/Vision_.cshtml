@using alwatnia.Helper;
@{
    ViewBag.Title = "Vision";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="">
    <div class="container">
        <div class="new-bar">
            <img class="img-responsive" src="http://watani-001-site1.mysitepanel.net/assets/home/images/parcode.png" alt="" />
        </div>
        <ol style="display: none" class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">الرئيسية</a></li>
            <li class="breadcrumb-item active">الرؤية والرسالة</li>
        </ol>
        <h2  style="color: #1e3687" class="title-page">@Resource.VisionAndMessage</h2>
    </div>
</section><!--section-topBanar-->
<div class="section-contentInner">
    <div class="section-aboutCompany">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="about-block wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.4s">
                        <h2>@Resource.Vision</h2>
                        <p>
                            @Html.Raw(ViewBag.vision)
                        </p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="about-block wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.4s">
                        @{
                            string VideoID = Functions.getVideoId(ViewBag.video);
                            <iframe width="545" height="300" class="cbp-lightbox" src="https://www.youtube.com/embed/@VideoID" frameborder="0" allowfullscreen style="min-width:100%"></iframe>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="about-block wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.5s">
                        <h2>@Resource.Message</h2>
                        <p>
                            @Html.Raw(ViewBag.message)

                        </p>
                        
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="about-block wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.5s">
                        <h2>@Resource.Goal</h2>
                        <p>
                            @Html.Raw(ViewBag.target)
                        </p>
                        
                    </div>
                </div>
                @Html.Raw(ViewBag.value)
            </div>
        </div>
    </div><!--section-aboutCompany-->
</div>