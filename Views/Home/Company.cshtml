                  <i class="fa fa-file-text" aria-hidden="true"></i>
                </a>
                <h2 class="lo-title"  ><a href="~/Recources/Uploads/@item.link" target="_blank" style=" font-size: 9px;font-weight: bold ; margin:0 0 100px 7px;">@item.Title</a></h2>
              </div>
            }
          </div>
