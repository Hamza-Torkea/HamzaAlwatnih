@using alwatnia.Helper
@using alwatnia.Models
@using alwatnia.Views.Shared
@using reCAPTCHA.MVC
@model alwatnia.Models.Company
@{
  ViewBag.Title = "Company";
  Layout = "~/Views/Shared/_Layout.cshtml";
  var isEnglish = Functions.IsEnglish();
  var CompanyNews = (List<alwatnia.Models.News>)ViewBag.CompanyNews;
  var reports = (List<alwatnia.Models.Reports>)ViewBag.reports;

  ViewData.AddActiveMenu(Nav.Compay);
  ViewData.AddActivePage(Model.ETitle);


}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.2/dist/jquery.fancybox.min.css" />
<script src="//code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.2/dist/jquery.fancybox.min.js"></script>


<style>
  .head-icon {
    position: relative;
  }

    .head-icon:before {
      content: '';
      position: absolute;
      background: #fff;
      left: 0;
      right: -100px;
      width: 20px;
      height: 4px;
      margin: auto;
      bottom: 0px;
    }

  .msg_body {
    font-size: 14px;
    line-height: 30px;
  }

  .company-icon {
    width: 20px;
  }

  .icon-blue {
    color: #2895cf
  }

  .icon-green {
    color: #11aa50
  }

  .icon-orange {
    color: #e18d1b
  }

  .icon-red {
    color: #ef1c23
  }

  .logo img {
    min-width: 280px;
  }

  .blog-box img {
    max-height: 410px !important;
  }

  .about-block {
    position: relative;
  }

  .logo {
    float: right;
    padding: 2px;
    margin-left: 10px;
  }

  .col-md-7 .blog-thumb img {
    height: 410px;
  }

  .about-block-p strong {
    font-weight: 100;
  }

  a.web-site {
    color: #4d494a;
    font-size: 26px;
    display: block;
    margin: 10px 0 0;
    font-weight: bold;
    letter-spacing: 2px;
    text-align: center;
  }
